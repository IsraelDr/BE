<UserControl x:Class="UI_WPF_TEMPORARY.ChildDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI_WPF_TEMPORARY"
             mc:Ignorable="d" 
             d:DesignHeight="444.595" d:DesignWidth="397.297">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Label Content="ID"/>
        <TextBox Grid.Column="1"  Name="new_ID" TextWrapping="Wrap" Text="" Margin="0.2,25,-0.4,24.8"/>
        <Label Content="Mother ID" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="1" Name="new_IDmother" TextWrapping="Wrap" Text="" Margin="0.2,25,-0.4,24.8"/>
        <Label Content="Name" Grid.Row="2"/>
        <TextBox Grid.Column="1" Grid.Row="2" Name="new_Name" TextWrapping="Wrap" Text="" Margin="0.2,25,-0.4,24.8"/>
        <Label Content="Birthdate" Grid.Row="3"/>
        <DatePicker Grid.Column="1" Name="new_Birthdate" Grid.Row="3"/>
        <CheckBox Content="SpecialNeeds" Name="new_specialneeds" Grid.Row="4"/>
        <Button x:Name="SaveBUTTON" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Margin="47.2,24,0,0" Grid.Row="4" VerticalAlignment="Top" Width="112" Height="35" Click="Button_Click"/>



    </Grid>
</UserControl>
