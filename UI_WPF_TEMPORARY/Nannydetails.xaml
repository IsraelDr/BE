<UserControl x:Class="UI_WPF_TEMPORARY.Nannydetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tp="clr-namespace:RoyT.TimePicker;assembly=RoyT.TimePicker"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI_WPF_TEMPORARY"
             mc:Ignorable="d" Height="397.067" Width="549.866">
    <Grid Margin="0,10,9.6,-208.2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="ID"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="new_ID" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="81" Grid.Column="1"/>
        <Label Content="Firstname"  Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Column="3" Name="new_Firstname" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="81"/>
        <Label Content="Lastname"  Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Column="5" Name="new_LastName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="81"/>
        <Label Content="Birthdate" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="1"/>
        <DatePicker HorizontalAlignment="Left" Name="new_Birthdate" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="82" Grid.Column="1"/>
        <Label Content="Phonenumber" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" />
        <TextBox Grid.ColumnSpan="2" Name="new_Phonenumber" Grid.Column="3" HorizontalAlignment="Left" Height="23" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Address" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox Grid.Column="5" Name="new_Address" HorizontalAlignment="Left" Height="23"  Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Floor" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="2"/>
        <TextBox Grid.ColumnSpan="2" Name="new_Floor" Grid.Column="1" HorizontalAlignment="Left" Height="23" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="experience" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2"  Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox Grid.ColumnSpan="2" Name="new_experience" Grid.Column="3" HorizontalAlignment="Left" Height="23" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Max_Num_Kids" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="2" />
        <TextBox Grid.Column="5"  Name="new_Max_Num_Kids" HorizontalAlignment="Left" Height="23" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Min_Age"  HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="3"/>
        <TextBox Grid.ColumnSpan="2" Name="new_min_age" Grid.Column="1" HorizontalAlignment="Left" Height="23" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Max Age"  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3"  Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox Grid.ColumnSpan="2" Name="new_max_age" Grid.Column="3" HorizontalAlignment="Left" Height="23" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82" />
        <Label Content="Hour Rate" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="5"  Name="new_hourrate" HorizontalAlignment="Left" Height="23" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="Monthly Rate"  HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="4"/>
        <TextBox Grid.ColumnSpan="2" Name="new_monthlyrate" Grid.Column="1" HorizontalAlignment="Left" Height="23" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Label Content="kidsCount"  HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="2"/>
        <TextBox Grid.ColumnSpan="2" Name="news_kidsCount" Grid.Column="3" HorizontalAlignment="Left" Height="23" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="82"/>
        <Grid Grid.ColumnSpan="5"  Grid.Row="4" Grid.Column="1" Margin="9.8,90.4,-10.4,-90.6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="182*"/>
                <ColumnDefinition Width="101*"/>
                <ColumnDefinition Width="105*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="55.2"/>
                <RowDefinition Height="Auto" MinHeight="55.2"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <CheckBox Content="Sunday" Name="new_Sunday" Margin="0,0,0,0.6"/>
            <CheckBox Content="Monday" Name="new_Monday" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.Row="1" Height="16" Margin="0,0.4,0,0" Width="63"/>
            <CheckBox Content="Tuesday" Name="new_Tuesday" Grid.Row="2" />
            <CheckBox Content="Wednesday" Name="new_Wednesday" Grid.Row="3" />
            <CheckBox Content="Thursday" Name="new_Thursday" Grid.Row="4"/>
            <CheckBox Content="Friday" Name="new_Friday" Grid.Row="5"/>
            <CheckBox Content="Saturday" Name="new_Saturday" Grid.Row="6" Margin="0,1,0,0"/>
            <tp:TimePickerSlider Name="new_Sunday_start" Grid.RowSpan="2" Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Margin="0,0,0.8,0.2"/>
            <tp:TimePickerSlider Name="new_Sunday_end" Grid.RowSpan="2" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Margin="0.2,0,1,0.2"/>
            <tp:TimePickerSlider Name="new_Monday_start" Grid.RowSpan="2" Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="1" Margin="0,0.4,0.8,0.4"/>
            <tp:TimePickerSlider Name="new_Monday_end" Grid.RowSpan="2" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="1" Margin="0.2,0.4,1,0.4"/>
            <tp:TimePickerSlider Name="new_Tuesday_start" Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="2" />
            <tp:TimePickerSlider Name="new_Tuesday_end" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="2" />
            <tp:TimePickerSlider Name="new_Wednesday_start" Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="3"  />
            <tp:TimePickerSlider Name="new_Wednesday_end" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="3" />
            <tp:TimePickerSlider Name="new_Thursday_start" Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="4" Margin="0,0.4,0,0"/>
            <tp:TimePickerSlider Name="new_Thursday_end" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="4" Margin="0.2,0.4,0,0"/>
            <tp:TimePickerSlider HorizontalAlignment="Left" Name="new_Friday_start" Height="20" VerticalAlignment="Top" Width="82"  Grid.Column="1" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="5" />
            <tp:TimePickerSlider Name="new_Friday_end"  Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="5" />
            <tp:TimePickerSlider Name="new_Saturday_start" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}" Grid.Row="6" Grid.Column="1" />
            <tp:TimePickerSlider Name="new_Saturday_end" Grid.Column="2" Time="{Binding DigitalTime, Mode=TwoWay}" MinTime="{Binding MinTime}" MaxTime="{Binding MaxTime}"  Grid.Row="6" />
            <Button Grid.ColumnSpan="2" Content="Save" HorizontalAlignment="Left" Margin="104,83,0,-53.2" Grid.Row="7" VerticalAlignment="Top" Width="105" Height="23" Click="Button_Click"/>
        </Grid>
    </Grid>
</UserControl>
